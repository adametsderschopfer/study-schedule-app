{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "ESNext",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@config/*": ["src/config/*"],
      "@domain/*": ["src/domain/*"],
      "@store/*": ["src/store/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": [
    "./src/**/*",
    "declaration.d.ts",
    "node_modules/ts-jest/globals.d.ts"
  ],
  "exclude": ["./src/stories/*/**"]
}
